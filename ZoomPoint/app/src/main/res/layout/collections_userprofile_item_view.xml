        tools:src="@drawable/dummy" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="@dimen/collection_photo_width"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/image_view_photo"
